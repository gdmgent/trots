---
---
[
  {% assign posts = site.news %}
  {% for post in posts %}
    {
      "id": "{{ post.url | slugify }}",
      "url": "{{ post.url | prepend: site.baseurl | prepend: site.url }}", 
      "title": "{{ post.title | escape }}",
      "title_long": "{{ post.subtitle | escape }}",
      "description": "{{ post.subtitle | escape }}",
      "button": "{{ post.button | escape }}",
      "uri": "{{ post.uri | prepend: site.baseurl | prepend: site.url }}", 
      "order": "{{ post.order }}",
      "active": "{{ post.active }}",
      "content": {{ post.content | strip_html | strip_newlines | remove:  "	" | escape | remove: "\" | jsonify }}
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]